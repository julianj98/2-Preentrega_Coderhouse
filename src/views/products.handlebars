<h1>Productos</h1>

{{#each products}}
<div>
  <h2>{{this.title}}</h2>
  <p>{{this.description}}</p>
  <p>Precio: {{this.price}}</p>
  <p>Categoria: {{this.category}}</p>
  <p>codigo: {{this.code}}</p>
  <p>stock: {{this.stock}}</p>
  <button onclick="addToCart('{{_id}}')">Agregar al carrito</button>
</div>
{{/each}}

